                                System.out.println("Haraagaaga cusub waa: $" + balance);
                            }
                            break;


                    }


                    // 7 maareynta


                } else if (selection == 7) {
                    System.out.println("Maareynta");
                    System.out.println("1.Bedal lambarka sirta ah");
                    System.out.println("2.bedal luqadda");
                    System.out.println("3.wargelin mobile lumay");
                    System.out.println("4.lacag xirasho");
                    System.out.println("5.u celi lacag soo qaldanty");
                    System.out.println("6.EnableMobileBanking");
                    opp = scanner.nextInt();
                    if (opp == 1) {
                        System.out.println("Fadlan geli pinkaaga cusub");
                        password = scanner.nextInt();
                        System.out.println("Hubikaaga cusub");
                        int pass = scanner.nextInt();
                        while (password != pass) {
                            System.out.println(" \n Hubi PIN-Kaaga cusub");
                            pass = scanner.nextInt();
                        }

                        System.out.println("waxaad ku guuleysaty inaad badasho PIN-kaaga");

                    } else if (opp == 2) {
                        System.out.println("Fadlan dooro luqada");
                        System.out.println("1.English");
                        System.out.println("2.Somali");
                        opp = scanner.nextInt();
                        if (opp == 1)
                            System.out.println("[-EVCPLUS-] you have successfully changed your language");
                        if (opp == 2)
                            System.out.println("[-EVCPLUS-] waad ku guulaysatay in aad badasho luqadda");
                    } else if (opp == 3) {
                        System.out.println("Fadlan geli mobileka lumay");
                        phone = scanner.nextInt();
                        System.out.println("fadlan geli  sirta numberka");
                        int pas = scanner.nextInt();
                        System.out.println("Ma hubtaa in aad u diiwaan geliso lumid number-kan" + phone + "?\n" + "1.Haa\n" + "2.Maya");
                        opp = scanner.nextInt();
                        if (opp == 1)
                            System.out.println("Waxaad ku guuleysatay inaad diwaan geliso  " + phone + "  " + currenDateAndTime);
                        else
                            System.out.println("Mahadsanid");
                    } else if (opp == 4) {
                        System.out.println("Fadlan geli numberka lagu Qalday");
                        phone = scanner.nextInt();
                        System.out.println("Fadlan geli numberka loo rabay");
                        phone = scanner.nextInt();
                        System.out.println("Ma hubtaa in aad xirto lacagtan?\n 1.Haa \n 2.Maya");
                        opp = scanner.nextInt();
                        if (opp == 1)
                            System.out.println("Waxaad ku guuleysty inaad xirto lacagtan");
                        else
                            System.out.println("Mahsanid");
                    } else if (opp == 5) {
                        System.out.println("Fadlan geli aqoonsiga lacag diridda");
                        phone = scanner.nextInt();
                        while (phone != phone) {
                            System.out.println("invalid input format(length)\n fad geli aqoosiga");
                            phone = scanner.nextInt();
                        }
                        System.out.println("Fadlan geli macluumaad");
                        opp = scanner.nextInt();
                        System.out.println("Ma hubtaa in aad celiso lacagtaan ?\n 1.haaa  \n 2.maya");
                        opp = scanner.nextInt();
                        if (opp == 1)
                            System.out.println("Waxaad ku guuleysty inaad celiso lacagtan");
                        else
                            System.out.println("Mahsanid");
                    } else if (opp == 6) {
                        System.out.println("Fadlan geli numberka is diwaan galinta ");
                        phone = scanner.nextInt();
                    }


                    // 8 taaaj;
                } else if (selection == 8) {

                }
                String senderName = "";
                String receiverName = "";
                String place = "";
                double amountSent = 0.0;

                do {
                    System.out.print("Magaca Diraha: ");
                    senderName = scanner.nextLine();
                    System.out.print("Magaca Qaataha: ");
                    receiverName = scanner.nextLine();
                    System.out.print("Goobta: ");
                    place = scanner.nextLine();
                    System.out.print("Lacagta ($): ");
                    amountSent = scanner.nextDouble();
                    scanner.nextLine();

                    if (senderName.isEmpty() || receiverName.isEmpty() || place.isEmpty() || amountSent <= 0) {
                        System.out.println("Fadlan buuxi dhammaan xogta si sax ah. Isku day mar kale.\n");
                    } else {
                        System.out.println("Xogta Xawaaladda: " + senderName + " → " + receiverName +
                                " | Goob: " + place + " | $" + amountSent);
                    }
                } while (senderName.isEmpty() || receiverName.isEmpty() || place.isEmpty() || amountSent <= 0);

                if (selection == 9) {
                    evcPlusMenu(scanner);

                }
            }
        }
        

        public static void evcPlusMenu(Scanner input) {
            System.out.println("EVC_Plus");
            System.out.println("1. Tus Haraaga Bill-ka");
            System.out.println("2. Wada Bixi Bill-ka");
            System.out.println("3. Qeyb Ka Mid Ah Bixi");
            System.out.println("0. Ka Bax");
            System.out.print("Dooro (0-3): ");

            String correctPin_8 = "1234";
            double totalBill = 100.0;
            double paidAmount = 0.0;

            int choice_8 = input.nextInt();
            input.nextLine();  // Clear buffer

            switch (choice_8) {
                case 1:
                    double balance = totalBill - paidAmount;
                    System.out.println("Haraaga bill-kaagu waa: $" + balance);
                    break;

                case 2:
                    System.out.print("Fadlan geli PIN-kaaga: ");
                    String pinFull = input.nextLine();
                    if (pinFull.equals(correctPin_8)) {
                        paidAmount = totalBill;
                        System.out.println("Bill-ka oo dhan ($" + totalBill + ") waa la bixiyay.");
                    } else {
                        System.out.println("PIN-ka waa khaldan.");
                    }
                    break;

                case 3:
                    System.out.print("Fadlan geli lacagta aad rabto inaad bixiso: $");
                    double partial = input.nextDouble();
                    input.nextLine();

                    System.out.print("Fadlan geli PIN-kaaga: ");
                    String pinPartial = input.nextLine();
                    if (pinPartial.equals(correctPin_8)) {
                        if (paidAmount + partial > totalBill) {
                            System.out.println("Lacagta aad gelisay waa ka badan tahay haraaga.");
                        } else {
                            paidAmount += partial;
                            System.out.println("Waxaad bixisay $" + partial + ". Haraaga cusub: $" + (totalBill - paidAmount));
                        }
                    } else {
                        System.out.println("PIN-ka waa khaldan.");
                    }
                    break;

                case 0:
                    System.out.println("Waad baxday, mahadsanid!");
                    break;


            }
        }
    }
